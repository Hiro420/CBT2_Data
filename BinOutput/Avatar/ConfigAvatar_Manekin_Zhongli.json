{
	"$type": "ConfigAvatar",
	"common":
	{
		"effectAttachShape":
		{
			"$type": "ConfigEffectAttachSkinnedMesh",
			"mesh": "EffectMesh",
		},
		"mass": 10.0,
		"checkInSurface": false
	},
	"headControl":
	{
		"$type": "ConfigHeadControl",
		"useHeadControl": true,
		"useWhiteAnimStates": false
	},
	"equipController":
