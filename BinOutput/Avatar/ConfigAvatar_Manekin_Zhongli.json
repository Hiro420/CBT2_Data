					{
						"ShowWeapon_BS": ["Male_Pole_ShowWeapon_BS","Emo_Avatar_Common_Male_Pole_UI_ShowWeaponBS"],
					},
					"setAnimatorBoolean":
					[
						{
							"name" : "&GotoAnyState",
						},
					],
					/*"equipReattach":                            //这个不行，无法跨state，会导致进loop时跳到右手一遍。。
					[
						{
							"equip": "equip01",
							"targetPoint": "WeaponL",
							"normalizeStart": 0.0,
							"normalizeEnd": 1
						}
					],*/
