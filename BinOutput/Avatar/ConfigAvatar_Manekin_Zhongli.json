		"attachPoints":
		{
			"equip01": "WeaponL", //钟离的武器挂点位置被调整了,注意!!!!
			"equip02": "WeaponL",
			"equip00": "WeaponBackPut",
		},
		"sheathPoint": "WeaponBackPut",
		"dissolveSheathFadeDelay": 0.0,
		"dissolveSheathFadeTime": 0.3,
		// "dissolveTakeFadeTime":0,//拿出武器的过渡时间，和收武器是分开的。但是目前两个都会执行一次。建议只填1个。
